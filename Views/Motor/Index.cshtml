@{
    ViewData["Title"] = "Belanja";
}

<div>
    <h1 class="display-4">Daftar Motor : </h1>
    
    <style>
    body {
        background-image: url('https://mocah.org/uploads/posts/342284-KDA-Akali-LoL-League-of-Legends-Video-Game-The-Baddest.jpg');
        background-size: cover;
    }
</style>
    <table class="table">
        <thead>
            <tr>
                <th>Nama</th>
                <th>Merek</th>
                <th>Harga</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Nama</td>
                    <td>@item.Merek</td>
                    <td>@item.Harga</td>
                    <td>
                        <a asp-controller="Motor" asp-action="Beli" asp-route-id="@item.Id">Beli</a> |
                        <a asp-controller="Motor" asp-action="Show" asp-route-id="@item.Id">Detail</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>